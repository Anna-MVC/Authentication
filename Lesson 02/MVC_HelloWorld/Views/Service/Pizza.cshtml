@using MVC_HelloWorld.Models
@model IEnumerable<PizzaViewModel>
@{
    ViewBag.Title = "Pizza";
}

<h2>Pizza</h2>
<p>Here is your Pizza.</p>
<ul>
    
    @foreach (var item in Model)
    {
        <li>@item.Name - @item.Price</li>
    }
</ul>

@foreach (var key in ViewData.Keys)
{
    <p>@ViewData[key]</p>
}